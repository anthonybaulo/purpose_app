<h2>Write your statement of purpose:</h2>

<%= form_with(model: @mission_statement, local: true) do |f| %>
  <div class="form-group">
    <%= f.text_area :content, class: "form-control", rows: 12 %>
  </div>
  <div class="form-group">
    <div class="custom-control custom-switch">
      <%= f.check_box :public, { class: "custom-control-input" },
                                 "true", "false" %>
      <%= f.label     :public, "Public",
                               { class: "custom-control-label" }%>
    </div>
  </div>  
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>