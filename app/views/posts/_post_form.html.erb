<%= form_with(model: @post, local: true) do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class:       "form-control",
                             placeholder: "Title" %>
  </div>
  <div class="form-group">
    <%= f.text_area :content, class:       "form-control", 
                              rows:        12,
                              placeholder: "Content" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>