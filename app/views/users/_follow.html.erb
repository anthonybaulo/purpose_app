<%= form_with(model: current_user.active_relationships.build, 
              html:  { local: true }) do |f| %>
  <%# # The first hidden field has an encrypted value for some reason%>
  <%= hidden_field_tag :skip, user.id %>
  <%= hidden_field_tag :followed_id, user.id %>
  <%= f.submit "Follow", class: "btn btn-outline-info follow-btn" %>
<% end %>