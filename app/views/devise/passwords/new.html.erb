<% provide(:title, "Password reset") %>

<div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-3">
  <h1 class="display-4 py-2 text-truncate">Reset Password?</h1>
  <div class="px-2">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
                html: { method: :post, class: "justify-content-center" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                          class: "form-control", placeholder: "Email" %>
      </div>

      <%= f.submit "Send password reset instructions", class: "btn btn-primary btn-block" %>
    <% end %>

    <div class="py-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
